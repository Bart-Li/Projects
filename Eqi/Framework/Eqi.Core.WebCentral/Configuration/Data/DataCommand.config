  <dataCommand name="GetCustomerCommunicationTopic" commandType="Text" database="SSLQuery" >
    <commandText>
      <![CDATA[SELECT  TopicID,TopicName,PTopicID  FROM  Ecommerce2005.dbo.MPS_CommunicationTopic WITH(NOLOCK) WHERE  [Status] = 'N']]>
    </commandText>
  </dataCommand>
</DataCommandsConfig>